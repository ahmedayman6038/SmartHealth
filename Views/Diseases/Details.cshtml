@model SmartHealth.Models.Disease

@{
    ViewData["Title"] = "Details";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Diseases
            <small><a asp-action="Index" asp-controller="Diseases">View List</a></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Diseases</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-header with-border">
                        <i class="fa fa-text-width"></i>

                        <h3 class="box-title">Details Of Disease</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <dl class="dl-horizontal">
                            <dt>Disease Name</dt>
                            <dd>@Model.Name</dd>
                            <dt>Disease Details</dt>
                            <dd>@Model.Details</dd>
                            <dt>Disease Type</dt>
                            <dd>@Model.Specialty.Name</dd>
                            <dt>Disease Symptoms</dt>
                            <dd>
                                <ul>
                                    @foreach (var item in Model.SymptomDiseases)
                                    {
                                        <li>@item.Symptom.Name</li>
                                    }
                                </ul>
                            </dd>
                        </dl>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row-->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->