@model SmartHealth.Models.Doctor

@{
    ViewData["Title"] = "Details";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Doctors
            <small><a asp-action="Index" asp-controller="Doctors">View List</a></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Doctors</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-header with-border">
                        <i class="fa fa-text-width"></i>

                        <h3 class="box-title">Details Of Doctor</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <dl class="dl-horizontal">
                            <dt>ٍDoctor Name</dt>
                            <dd>@Model.Name</dd>
                            <dt>ٍDoctor Email</dt>
                            <dd>@Model.Email</dd>
                            <dt>ٍDoctor City</dt>
                            <dd>@Model.City</dd>
                            <dt>ٍDoctor Address</dt>
                            <dd>@Model.Address</dd>
                            <dt>ٍDoctor Created</dt>
                            <dd>@Model.CreatedData.ToString("dd/MM/yyyy")</dd>
                            <dt>Doctor Specialties</dt>
                            <dd>
                                <ul>
                                    @foreach (var item in Model.SpecialtyDoctors)
                                    {
                                        <li>@item.Specialty.Name</li>
                                    }
                                </ul>
                            </dd>
                        </dl>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row-->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->