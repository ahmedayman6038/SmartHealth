@model IEnumerable<SmartHealth.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Doctors
            <small><a asp-action="Create" asp-controller="Doctors">Add New</a></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Doctors</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">


        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">All Patients</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                                    <th>Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="@item.ID">
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>
                                            <a asp-action="Details" asp-controller="Doctors" asp-route-id="@item.ID" class="btn btn-social-icon btn-bitbucket" style="background-color: #3c8dbc"><i class="fa fa-info-circle"></i></a>
                                            <a asp-action="Edit" asp-controller="Doctors" asp-route-id="@item.ID" class="btn btn-social-icon btn-dropbox" style="background-color: #00a65a"><i class="fa fa-refresh"></i></a>
                                            <button id="@item.ID" class="btn btn-social-icon btn-facebook delete" style="background-color: #dd4b39"><i class="fa fa-trash"></i></button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<div class="modal modal-warning fade" id="modal-warning">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Warning</h4>
            </div>
            <div class="modal-body">
                <p>Are You Sure You Want Delete This Item ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline" id="confirmDelete">Delete</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<div class="modal modal-danger fade" id="modal-danger">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Error</h4>
            </div>
            <div class="modal-body">
                <p>Something Goes Wrong On The Server Pleas Try Again!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline " data-dismiss="modal">Ok</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
@section Scripts {
    <script>
        $(function () {
            var table = $('#example1').DataTable()
            var id = 0;
            $('.delete').click(function () {
                $('#modal-warning').modal('show');
                id = $(this).attr('id');
            })
            $('#confirmDelete').click(function () {
                $.ajax({
                    url: '/api/Doctors/' + id,
                    type: 'DELETE',
                    dataType: 'json',
                    error: function () {
                        $('#modal-danger').modal('show');
                    },
                    success: function () {
                        table.row("#" + id).remove().draw();
                    },
                });
                $('#modal-warning').modal('hide');
            })
        })
    </script>
}
