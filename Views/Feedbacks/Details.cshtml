@model SmartHealth.Models.Feedback

@{
    ViewData["Title"] = "Details";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Feedbacks
            <small><a asp-action="Index" asp-controller="Feedbacks">View List</a></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Feedbacks</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div class="box box-solid">
                    <div class="box-header with-border">
                        <i class="fa fa-text-width"></i>

                        <h3 class="box-title">Details Of Feedback</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <dl class="dl-horizontal">
                            <dt>ٍSender Name</dt>
                            <dd>@Model.Patient.Name</dd>
                            <dt>ٍSender Email</dt>
                            <dd>@Model.Patient.Email</dd>
                            <dt>ٍSend Date</dt>
                            <dd>@Model.SendDate</dd>
                            <dt>ٍFeedback Title</dt>
                            <dd>@Model.Title</dd>
                            <dt>ٍFeedback Content</dt>
                            <dd>@Model.Content</dd>
                        </dl>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row-->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->